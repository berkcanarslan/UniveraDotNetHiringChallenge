@using ProductApp.ProductAppData.DataModel
@model  IEnumerable<Product>

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Created By</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.CreatedBy</td>
                    <td>@product.Category</td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>
</html>